{
    "name": "lucasmonteiro/architectedsolution",
    "description": "PHP project with Employee and Project management, using PDO, factories, enums and migrations.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas Monteiro"
        }
    ],
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Migrations\\": "database/migrations/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "migrate": "php cli.php migrate",
        "seed": "php cli.php seed"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
